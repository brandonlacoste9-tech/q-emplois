# QWORKS Backend Environment Configuration

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/qworks?schema=public

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d

# ============================================
# Redis (for caching and sessions)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Stripe Payments
# ============================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ============================================
# Twilio WhatsApp
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ============================================
# API Configuration
# ============================================
PORT=3000
API_KEY=your-api-key-for-internal-communication
CORS_ORIGIN=http://localhost:5173

# ============================================
# Frontend URL (for email links, redirects)
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# Email (Resend)
# ============================================
RESEND_API_KEY=re_xxx
EMAIL_FROM=noreply@qworks.ca

# ============================================
# Law 25 / Privacy Compliance
# ============================================
DATA_RETENTION_DAYS=30
PRIVACY_POLICY_URL=https://qworks.ca/politique-confidentialite
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
